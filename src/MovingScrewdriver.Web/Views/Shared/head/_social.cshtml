@using MovingScrewdriver.Web.Extensions
@{
    var desc = ViewBag.Description as string;
}


@if (ViewBag.BlogConfig != null && ViewBag.BlogConfig.ShowSocialMeta)
{
    <!-- social-->
    if (ViewBag.BlogConfig.MetaTwitterShouldRender)
    {
        <meta name="twitter:site" content="@string.Format("@{0}", ViewBag.BlogConfig.MetaTwitterName)"/> 
        <meta name="twitter:creator" content="@string.Format("@{0}", ViewBag.BlogConfig.MetaTwitterName)"/> 
        <meta name="twitter:card" content="summary"/> 
        <meta name="twitter:image" content="@Url.AbsoluteContent("~/content/images/me/win8tile.png")"/> 
        <meta name="twitter:description" content="@(desc ?? ViewBag.BlogConfig.MetaDescription)" />
        @* Twitter is doing fallback to OG, so if OG is specified, rest will be filled *@
    }

    if (ViewBag.BlogConfig.MetaFbAppShouldRender)
    {
        <meta property="fb:admins" content="@ViewBag.BlogConfig.MetaFbAppId" />
    }
    <!-- /social-->
}
